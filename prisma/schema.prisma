datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(uuid())
  name      String
  username  String   @unique
  password  String
  role      String
  devices   Device[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Device {
  id          String   @id @default(uuid())
  name        String
  displayName String
  ipAddress   String
  macAddress  String
  status      String
  lastActive  DateTime
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  specs       Json
  user        User     @relation(fields: [userId], references: [id])
  userId      String
  group       Group    @relation(fields: [groupId], references: [id])
  groupId     String
}

model Group {
  id        String   @id @default(uuid())
  name      String
  location  String
  prefix    String
  devices   Device[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
